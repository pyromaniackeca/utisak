<div class="nine columns main-content" ng-app="postsApp" ng-controller="PostsController as postsCtrl" ng-init="postsCtrl.init('https://demo9565267.mockable.io')">

  <%= partial "digest" %>

  <h5>Latest</h5>
  <hr>

  Showing {{postsCtrl.posts.length}} posts

  <div class="article" ng-repeat="post in postsCtrl.posts" >
    <div class="article-share">
      <div class="article-share-content">
        <ul class="share-buttons">
          <li>
            <a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https://api.watchville.co/v2/posts/16803/click">
              <div class="share-icon facebook"></div>
            </a>
          </li>
          <li>
            <a target="_blank" href="https://twitter.com/intent/tweet?source=https://api.watchville.co/v2/posts/16803/click&amp;text=BEST%20FROM%3A%20aBlogtoWatch%20%26%20Friends%20June%2019%2C%202015%20https%3A%2F%2Fapi.watchville.co%2Fv2%2Fposts%2F16803%2Fclick&amp;via=watchville">
              <div class="share-icon twitter"></div>
            </a>
          </li>
          <li>
            <a target="_blank" href="http://pinterest.com/pin/create/button/?url=https://api.watchville.co/v2/posts/16803/click&amp;description=BEST%20FROM%3A%20aBlogtoWatch%20%26%20Friends%20June%2019%2C%202015">
              <div class="share-icon pinterest"></div>
            </a>
          </li>
          <li>
            <a target="_blank" href="mailto:?subject=%5BWatchville%5D%20BEST%20FROM%3A%20aBlogtoWatch%20%26%20Friends%20June%2019%2C%202015&amp;body=Check%20out%20this%20link%20I%20found%20on%20Watchville%3A%0A%0ABEST%20FROM%3A%20aBlogtoWatch%20%26%20Friends%20June%2019%2C%202015%0Ahttps%3A%2F%2Fapi.watchville.co%2Fv2%2Fposts%2F16803%2Fclick">
              <div class="share-icon mail"></div>
            </a>
          </li>
        </ul>

        <div class="article-share-close">
          <span>Close</span>
        </div>
      </div>
    </div><!-- .article-share -->

    <div class="article-image">
      <div class="article-thumb">
        <a target="_blank" rel="nofollow" ng-href="{{post.share_url}}">
          <img ng-src="{{post.hero_image_url}}" alt="" />
        </a>
      </div>
    </div><!-- .article-image -->

    <div class="article-meta">
      <div class="article-title">
        <a target="_blank" rel="nofollow" ng-href="{{post.share_url}}" ng-bind="post.title"></a>
      </div>
      <div class="article-description" ng-bind="post.excerpt"></div>

      <div class="article-author">
        <a target="_blank" rel="nofollow" ng-href="{{post.share_url}}" ng-bind="post.author"></a>
          {{ postsCtrl.published_at(post) | timeAgo}}
          <!-- dot spacer --> · <!-- dot space -->
        <span>
          <span class="article-stats">
            {{ post.total_views }} views
            <!-- dot spacer --> · <!-- dot space -->
            {{ post.current_readers }} reading
          </span>
        </span>
      </div>

      <div class="share">
        <a href="#">Share</a>
      </div>
    </div><!-- .article-meta -->

  </div><!-- .article- -->

  <%= partial "digest" %>

  <div class="load-more">Load More Stories</div>
</div>

<%= partial "sidebar" %>
