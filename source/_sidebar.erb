<div class="three columns sidebar"
     ng-controller="CategoriesController as catCtrl"
     ng-init="catCtrl.init()">

   <h5 id="categories">
     <%= t(:sidebar_header) %>
     <a href class="clear-filter"
       ng-click="catCtrl.openCategory({slug: null})"
       ng-hide="catCtrl.emptyFilter()">Ã—</a>
   </h5>
  <hr>

  <dl class="search-filters">

    <dt ng-repeat="category in catCtrl.categories track by $index"
        class="u-flex-table category"
        ng-class="{
          'category-pinnable': hover && catCtrl.pinnable(category),
          'category-unpinnable': hover && catCtrl.unpinnable(category),
          'category-active': catCtrl.activeCategory(category)
        }"
        ng-mouseenter="hover = true"
        ng-mouseleave="hover = false" >

      <a href class="u-flex-table-item u-flex-table-item-primary category-title" ng-click="catCtrl.openCategory(category)">
        <div class="">{{category.title}}</div>
      </a>

      <a href class="u-flex-table-item category-action category-unpin" ng-click="catCtrl.unpinCategpry(category)">
        <div>-</div>
      </a>

      <a href class="u-flex-table-item category-action category-pin" ng-click="catCtrl.pinCategpry(category)">
        <div>+</div>
      </a>

      <div class="u-flex-table-item u-flex-table-item category-action category-count">
        <div class="feed-count">{{category.count}}</div>
      </div>
    </dt>

  </dl>

  <div class="sidebar-box">
    <div class="sidebar-box-main">
      <b><%= t(:sidebar_box_header) %></b><br>
      <%= t(:sidebar_box_body) %>
      <a href="http://twitter.com/utisak_">Twitter</a> <%= t(:and) %>
      <a href="http://facebook.com/najutisak">Facebook</a>.
    </div>
    <hr>
    <a href="/o-nama#uslovi" target="_self"><%= t(:tos) %></a>,
    <a href="/o-nama#kontakt" target="_self"><%= t(:contact) %></a>.
  </div>

</div>
