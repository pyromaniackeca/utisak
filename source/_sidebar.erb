<div class="three columns sidebar"
     ng-controller="CategoriesController as catCtrl"
     ng-init="catCtrl.init()">

  <h5>Filter by Source</h5>
  <hr>

  Categories length {{catCtrl.categories.length}}

  <dl class="search-filters">

    <dt ng-repeat="category in catCtrl.categories track by $index"
        ng-class="{active: catCtrl.activeCategory(category)}"
        ng-click="catCtrl.openCategory(category)" >
      <a ng-href="#{{category.slug}}">
        <div class="feed-name">{{category.title}}</div>
        <div class="feed-count">{{category.id}}</div>
      </a>
    </dt>

  </dl>

  <div class="terms">
    <div class="terms-tout">
      <b>Want More Utisak?</b><br>
      Stay up-to-date by following us on
      <a href="http://twitter.com/utisak_">Twitter</a> and
      <a href="http://instagram.com/#">Instagram</a>
    </div>
    <hr>
    <a href="/terms-of-service">Terms of Service</a>  and
    <a href="/privacy-policy">Privacy Policy</a>
  </div>

</div>
